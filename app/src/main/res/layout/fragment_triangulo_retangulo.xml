<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bbbb"
    tools:context="com.example.isaquearaujo.trigonometrycalculator.TrianguloRetangulo">
    <TextView
        android:textColor="#fff"
        android:textSize="25dp"
        android:textAlignment="center"
        android:text="Triângulo Retângulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imgtriret"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="1dp"
        android:src="@drawable/trianguloret" />

    <TextView
        android:id="@+id/textvalordesejado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imgtriret"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="77dp"
        android:text="Valor desejado:"
        android:textColor="#fff"
        android:textSize="18dp" />

    <RadioGroup
        android:layout_below="@id/textvalordesejado"
        android:id="@+id/valordesejado"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton android:id="@+id/radio_pirates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="pirates"
            />
        <RadioButton android:id="@+id/radio_ninjas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ninjas"
           />></RadioGroup>
</RelativeLayout>
