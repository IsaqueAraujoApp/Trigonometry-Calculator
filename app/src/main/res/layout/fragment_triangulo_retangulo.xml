<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bbbb"
    android:paddingTop="25dp"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    tools:context="com.example.isaquearaujo.trigonometrycalculator.TrianguloRetangulo">
    <TextView
        android:id="@+id/texttri"
        android:textColor="#fff"
        android:textSize="25dp"
        android:textAlignment="center"
        android:text="Triângulo Retângulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_below="@id/texttri"
        android:id="@+id/imgtriret"
        android:layout_marginRight="70dp"
        android:layout_marginLeft="70dp"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:padding="1dp"
        android:src="@drawable/trianguloret" />
    <TextView
        android:id="@+id/textvalordesejado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgtriret"
        android:text="Valor desejado:"
        android:textColor="#fff"
        android:textSize="18dp" />
    <Spinner
        android:layout_below="@id/textvalordesejado"
        android:id="@+id/valordesejado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></Spinner>
    <RelativeLayout
        android:layout_below="@id/valordesejado"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textColor="#fff"
            android:text="Valor A:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" />
        <EditText
            android:textColor="#00bbbb"
            android:id="@+id/valora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textView"
            android:background="#fff" />
        <TextView
            android:id="@+id/textb"
            android:textColor="#fff"
            android:text="Valor B:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/valora" />
        <EditText
            android:textColor="#00bbbb"
            android:id="@+id/valorb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textb"
            android:background="#fff" />
        <TextView
            android:id="@+id/textc"
            android:textColor="#fff"
            android:text="Valor C:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/valorb" />
        <EditText
            android:textColor="#00bbbb"
            android:id="@+id/valorc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textc"
            android:background="#fff" />
        <TextView
            android:id="@+id/textangc"
            android:textColor="#fff"
            android:text="Valor Ângulo a:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/valorc" />
        <EditText
            android:textColor="#00bbbb"
            android:id="@+id/valoranga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textangc"
            android:background="#fff" />
        <TextView
            android:id="@+id/textangb"
            android:textColor="#fff"
            android:text="Valor Ângulo B:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/valoranga" />
        <EditText
            android:textColor="#00bbbb"
            android:id="@+id/valorangb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textangb"
            android:background="#fff" />
        <Button
            android:id="@+id/calcret"
            android:layout_marginTop="10dp"
            android:textColor="#00bbbb"
            android:text="Calcular"
            android:background="#fff"
            android:layout_below="@id/valorangb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/textresult"
            android:layout_below="@id/calcret"
            android:textColor="#fff"
            android:text="Resultado:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/result"
            android:background="#fff"
            android:layout_below="@id/textresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>
